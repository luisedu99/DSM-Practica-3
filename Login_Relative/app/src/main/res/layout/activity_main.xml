<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="48dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/texto_conectar"
            android:layout_centerHorizontal="true"
            android:text="Conectar"
            android:layout_marginBottom="160dp"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <EditText
            android:id="@+id/input_usuario"
            android:layout_height="60dp"
            android:layout_width="match_parent"
            android:layout_below="@+id/texto_conectar"
            android:hint="Correo"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/input_password"
            android:layout_below="@+id/input_usuario"
            android:hint="Contraseña"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/boton_iniciar_sesion"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/input_password"
            android:text="Iniciar Sesión" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/texto_olvidaste_password"
            android:text="¿Olvidaste tú contraseña?"
            android:layout_below="@+id/boton_iniciar_sesion"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#0e8aee"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>